---
import HealthCheckForm from "@/components/dialogs/HealthCheck.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout>
    <main class="px-16 gap-8 flex flex-col">
        <header class="flex justify-between items-center">
            <div class="flex flex-col">
                <h1 class="text-3xl font-semibold">Health Checks</h1>
                <p class="text-gray-600">
                    Test endpoint performance with multiple concurrent threads
                </p>
            </div>
            <button
                popovertarget="new-health-check"
                class="bg-black hover:bg-gray-800 text-white py-2 px-4 rounded-lg transition-colors"
            >
                + New Health Check
            </button>
        </header>

        <div
            class="flex flex-col items-center gap-4 border-2 border-dashed border-gray-300 p-16 rounded-lg"
        >
            <h3 class="font-semibold">No load tests configured</h3>
            <p class="text-gray-600">
                Create your first load test to evaluate your endpoint
                performance under load
            </p>
            <HealthCheckForm />
        </div>
    </main>
</Layout>
