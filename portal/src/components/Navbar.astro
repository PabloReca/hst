---
const currentPath = Astro.url.pathname;
const isHealthChecks = currentPath === '/health-checks';
const isLoadTest = currentPath === '/load-test';
---

<nav class="flex justify-between items-center py-4 px-16">
    <div class="flex items-center gap-4">
        <div class="bg-black p-1 rounded-md">
        <svg width="30" height="30" viewBox="0 -8 72 72" class="fill-current text-white" xmlns="http://www.w3.org/2000/svg">
            <path d="M13.32,44.31a4.5,4.5,0,0,0,6.36,6.36L34.44,35.91l-6.36-6.36Z" />
            <polygon points="50.2 16.96 56.63 13.63 60 7.13 56.86 3.99 50.36 7.36 47.03 13.78 39.21 21.61 42.38 24.79 50.2 16.96" />
            <path d="M51.61,34,51,34a8.9,8.9,0,0,0-3.11.58L29.45,16.09A8.9,8.9,0,0,0,30,13l-.06-.6A8.9,8.9,0,0,0,17.19,4.89l6,6a3,3,0,0,1,.68,1.08A3,3,0,0,1,21,16a2.92,2.92,0,0,1-1-.21,3.15,3.15,0,0,1-1.08-.67l-6-6a8.9,8.9,0,0,0,7.49,12.78L21,22a8.9,8.9,0,0,0,3.11-.58L42.6,39.84A8.9,8.9,0,0,0,42,43l.06.6A9,9,0,0,0,51,51.94a8.72,8.72,0,0,0,3.85-.9l-6-6A3.08,3.08,0,0,1,48.21,44,3,3,0,0,1,51,40a2.92,2.92,0,0,1,1,.21,2.72,2.72,0,0,1,1.08.67l6,6A8.9,8.9,0,0,0,51.61,34Z" />
        </svg>
        </div>
        <p class="text-xl font-semibold">HTTP SRE Toolkit</p>
    </div>

    <div class="flex items-center gap-8">
        <a 
            href="/health-checks" 
            class={`flex items-center gap-2 transition-colors rounded-lg px-5 py-3.5 ${isHealthChecks ? 'bg-black text-white' : 'text-gray-700 hover:bg-gray-100'}`}
        >
            <svg width="24" height="24" viewBox="0 0 24 24" class="fill-none stroke-current" xmlns="http://www.w3.org/2000/svg" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 12h-2.48a2 2 0 0 0-1.93 1.46l-2.35 8.36a.25.25 0 0 1-.48 0L9.24 2.18a.25.25 0 0 0-.48 0l-2.35 8.36A2 2 0 0 1 4.49 12H2" />
            </svg>
            Health Checks
        </a>
        <a 
            href="/load-test" 
            class={`flex items-center gap-2 transition-colors rounded-lg px-5 py-3.5 ${isLoadTest ? 'bg-black text-white' : 'text-gray-700 hover:bg-gray-100'}`}
        >
            <svg width="24" height="24" viewBox="0 0 24 24" class="fill-none stroke-current" xmlns="http://www.w3.org/2000/svg" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 14a1 1 0 0 1-.78-1.63l9.9-10.2a.5.5 0 0 1 .86.46l-1.92 6.02A1 1 0 0 0 13 10h7a1 1 0 0 1 .78 1.63l-9.9 10.2a.5.5 0 0 1-.86-.46l1.92-6.02A1 1 0 0 0 11 14z" />
            </svg>
            Load Test
        </a>
    </div>
</nav>