---
import HealthCheckForm from "@/components/dialogs/HealthCheck.astro";
import Layout from "@/layouts/Layout.astro";

// Fetch health checks
let healthChecks = [];
try {
    const response = await fetch('http://localhost:4321/api/health-checks');
    const data = await response.json();
    if (data.success) {
        healthChecks = data.data;
    }
} catch (error) {
    console.error('Failed to fetch health checks:', error);
}
---

<Layout>
    <main class="px-16 pt-8 gap-8 flex flex-col">
        <header class="flex justify-between items-center">
            <div class="flex flex-col">
                <h1 class="text-3xl font-semibold">Health Checks</h1>
                <p class="text-gray-600">
                    Test endpoint status with recurrent checks
                </p>
            </div>
            <button
                popovertarget="new-health-check"
                class="bg-black hover:bg-gray-800 text-white py-2 px-4 rounded-lg transition-colors"
            >
                + New Health Check
            </button>
        </header>

        {healthChecks.length === 0 ? (
            <div class="flex flex-col items-center gap-4 border-2 border-dashed border-gray-300 p-16 rounded-lg">
                <h3 class="font-semibold">No HealthChecks configured</h3>
                <p class="text-gray-600">
                    Create your first HealthCheck to evaluate your endpoint
                    performance under load
                </p>
            </div>
        ) : (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {healthChecks.map((hc) => (
                    <a href={`/health-checks/${hc.name}`} class="border border-gray-200 rounded-lg p-6 hover:border-gray-400 hover:shadow-md transition-all cursor-pointer">
                        <div class="flex flex-col gap-2">
                            <h3 class="text-xl font-semibold">{hc.name}</h3>
                            <p class="text-sm text-gray-600 truncate">{hc.url}</p>
                            <div class="flex gap-4 mt-2">
                                <span class="text-xs bg-gray-100 px-2 py-1 rounded">
                                    {hc.method}
                                </span>
                                <span class="text-xs bg-gray-100 px-2 py-1 rounded">
                                    {hc.interval}s
                                </span>
                                <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded">
                                    Active
                                </span>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        )}

        <HealthCheckForm />
    </main>
</Layout>